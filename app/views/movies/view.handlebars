<section id="groups">
    <div class="container-fluid">
        <h1>{{movie.title}}</h1>
        <hr width="100px" color="white">
        <div class="row">
            <div class="col-md-3">
                <div class="img">
                    {{#if movie.img}}
                    <img src="{{movie.img}}" alt="">
                    {{/if}}
                </div>
            </div>
            <div class="col-md-3">
                <span><a href="/movies/edit/{{movie._id}}" class="btn
                        btn-primary">Edit</a></span>
                <span><a href="/api/movie-render/{{movie.title}}/{{movie.year}}"
                        class="btn btn-primary">View api</a></span>
                <span><a href="/movies/year/{{movie.year}}" class="btn
                        btn-primary year">
                        {{movie.year}}
                    </a></span>
                <span class="btn-group">
                    {{#each movie.genres}}
                    <a href="/movies/genres/{{this}}" class="btn btn-primary">
                        {{this}}
                    </a>
                    {{/each}}
                </span>

                <div class="description">
                    <p>
                        Running time: {{movie.runtime}}
                    </p>
                    <p class="description">
                        {{movie.description}}
                    </p>
                </div>

                <div class="cast">
                    <h2>Cast</h2>
                    <hr width="100px" color="white">
                    <div class="btn-group">
                        {{#each movie.cast}}
                        <a href="/movies/cast/{{this}}" class="btn btn-primary">
                            {{this}}
                        </a>
                        {{/each}}
                    </div>
                </div>

                <div class="reviews">
                    <h2>Reviews</h2>
                    <hr width="100px" color="white">
                </div>
            </div>
            <div class="col-md-6">
                Youtube
            </div>
        </div>
    </div>
</section>